<!DOCTYPE HTML>
<html>
<head>
<% include partials/header %>
<title>红包</title>
</head>
<body>
  <section class="container me-top-box text-center">
    <img src="/public/images/wallet-icon.png" >
    <p class="mt-10 cl-drak-grey font-xlg "><span class="font-md">余额</span>￥<%= user.availableMoney/100.0 %></p>
  </section>
  <section class="container mt-20 cl-drak-grey">
    <div class="bg-white" style="padding: 10px 20px;" id="event-container">
      <div class="text-center font-lg cl-grey mb-20">创建的活动</div>
      <% events.forEach(function(item) { %>
        <% include partials/cash-flow %>
      <% }) %>
    </div>
    <div class="text-center font-md cl-grey mt-10" id="load-more-btn" style="display:<%= events.length >= 10 ? 'block' : 'none' %>">加载更多</div>
  </section>
  <% include partials/footer %>

  <div class="nav">
    <div class="rp-bottom-btns">
      <a class="rp-bottom-btn rp-bottom-left-btn" href="/user/events">我的活动</a>
      <a class="rp-bottom-btn rp-bottom-right-btn" href="/user/company">企业账户</a>
    </div>
  </div>
</body>
<script src="/public/js/zepto.min.js"></script>
<% include partials/register-wechat-api %>
<% include partials/hide-wechat-menu %>
<script src="/public/js/company-wallet.js"></script>
</html>
