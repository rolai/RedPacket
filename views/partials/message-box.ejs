<div class="weui_dialog_alert" style="display:none">
   <div class="weui_mask"></div>
   <div class="weui_dialog">
       <div class="weui_dialog_hd"><strong class="weui_dialog_title"></strong></div>
       <div class="weui_dialog_bd"></div>
       <div class="weui_dialog_ft">
           <a href="#" id='messagebox-btn' class="weui_btn_dialog primary">确定</a>
       </div>
   </div>
</div>
<script type="text/javascript">
  function showMessageBox(title, message){
    document.getElementsByClassName('weui_dialog_title')[0].innerHTML = title;
    document.getElementsByClassName('weui_dialog_bd')[0].innerHTML = message;
    document.getElementsByClassName('weui_dialog_alert')[0].style.display = 'block';
  }

  document.getElementById('messagebox-btn').addEventListener("click", function(e) {
    document.getElementsByClassName('weui_dialog_alert')[0].style.display = 'none';
  })
</script>
